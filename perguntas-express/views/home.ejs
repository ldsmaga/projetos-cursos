<%- include ('partials/header.ejs') %> 
<body>
    <div class="container">
            <br>
            <a href="/perguntar" style="color: inherit;"><h1>Perguntas</h1></a>
            <hr>
            <% perguntas.forEach(pergunta =>{ %>
        <div class="card">
            <div class="card-body">
                    <h3><%= pergunta.title %></h3>
            </div>
            <div class="card-footer">
                <a href="/pergunta/<%=pergunta.id%>"><button class="btn btn-primary">Responder</button></a>
            </div>
        </div>
        <br>
        <% }) %>
    </div>
</body>
